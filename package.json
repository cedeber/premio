{
  "name": "premio",
  "private": true,
  "version": "1.0.0",
  "description": "Web startup with WebAssembly.",
  "scripts": {
    "wasm:async": "wasm-pack build --target web --out-dir ../../packages/wasm_async --out-name async ./crates/async",
    "wasm:sum": "wasm-pack build --target web --out-dir ../../packages/wasm_sum --out-name sum ./crates/wasm",
    "wasm": "pnpm run wasm:async && pnpm run wasm:sum",
		"dev": "pnpm run wasm && pnpm recursive run dev"
  },
  "dependencies": {
    "wasm-pack": "^0.10.2"
  }
}
