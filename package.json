{
	"name": "premio",
	"version": "1.0.0",
	"description": "Web startup with WebAssembly.",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"wasm:async": "wasm-pack build --target web --out-dir ../../packages/wasm_async --out-name async ./crates/wasm_async",
		"wasm:sum": "wasm-pack build --target web --out-dir ../../packages/wasm_sum --out-name sum ./crates/wasm_sum",
		"dev": "rimraf dist/ && concurrently 'DEV_MODE=1 RUST_LOG=trace cargo watch --watch ./crates --exec \"run -p server\"' 'npm run css -w main' 'vite'",
		"pre-build": "concurrently 'npm run wasm:async' 'npm run wasm:sum'",
		"build": "rimraf dist/ && npm run pre-build && vite build",
		"github-pages": "BASE_URL=premio vite build --base /premio/"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^2.6.2",
		"@graphql-codegen/fragment-matcher": "^3.2.1",
		"@graphql-codegen/near-operation-file-preset": "^2.2.14",
		"@graphql-codegen/schema-ast": "^2.4.1",
		"@graphql-codegen/typescript": "^2.5.1",
		"@graphql-codegen/typescript-graphql-request": "^4.5.3",
		"@graphql-codegen/typescript-operations": "^2.4.2",
		"@types/node": "^16.11.56",
		"@types/ramda": "^0.28.15",
		"@typescript-eslint/eslint-plugin": "^5.35.0",
		"@typescript-eslint/parser": "^5.35.0",
		"concurrently": "^7.0.0",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"just-install": "^1.0.8",
		"postcss": "^8.4.12",
		"prettier": "^2.6.2",
		"rimraf": "^3.0.2",
		"sass": "^1.50.1",
		"typed-scss-modules": "^6.2.0",
		"typescript": "^4.6.3",
		"vite": "^3.0.9",
		"vite-plugin-solid": "^2.3.0",
		"vitest": "^0.22.1"
	},
	"dependencies": {
		"@solidjs/router": "^0.4.2",
		"graphql": "^16.6.0",
		"graphql-request": "^5.0.0",
		"ramda": "^0.28.0",
		"solid-js": "^1.5.3"
	}
}
