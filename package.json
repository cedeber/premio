{
	"name": "premio",
	"version": "1.0.0",
	"description": "Web startup with WebAssembly.",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"wasm:async": "wasm-pack build --target web --out-dir ../../packages/wasm_async --out-name async ./crates/wasm_async",
		"wasm:sum": "wasm-pack build --target web --out-dir ../../packages/wasm_sum --out-name sum ./crates/wasm_sum",
		"dev": "rimraf dist/ && concurrently 'DEV_MODE=1 RUST_LOG=trace cargo watch --watch ./crates --exec \"run -p server\"' 'npm run css -w my-app' 'vite'",
		"pre-build": "concurrently 'npm run wasm:async' 'npm run wasm:sum'",
		"build": "rimraf dist/ && npm run pre-build && vite build",
		"codegen": "graphql-codegen --config ts.codegen.yml",
		"schema": "graphql-codegen --config schema.codegen.yml",
		"github-pages": "BASE_URL=premio vite build --base /premio/"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^2.6.2",
		"@graphql-codegen/fragment-matcher": "^3.2.1",
		"@graphql-codegen/introspection": "^2.1.1",
		"@graphql-codegen/near-operation-file-preset": "^2.2.14",
		"@graphql-codegen/schema-ast": "^2.4.1",
		"@graphql-codegen/typescript": "^2.5.1",
		"@graphql-codegen/typescript-operations": "^2.4.2",
		"@graphql-codegen/typescript-react-apollo": "^3.2.16",
		"@storybook/addon-a11y": "^6.5.6",
		"@storybook/addon-essentials": "^6.5.6",
		"@storybook/addon-interactions": "^6.5.6",
		"@storybook/addon-links": "^6.5.6",
		"@storybook/builder-vite": "^0.2.2",
		"@storybook/jest": "^0.0.10",
		"@storybook/react": "^6.5.6",
		"@storybook/testing-library": "^0.0.13",
		"@tailwindcss/typography": "^0.5.2",
		"@types/node": "^16.11.56",
		"@typescript-eslint/eslint-plugin": "^5.35.0",
		"@typescript-eslint/parser": "^5.35.0",
		"@vitejs/plugin-react": "^2.0.1",
		"concurrently": "^7.0.0",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jsx-a11y": "^6.5.1",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.29.4",
		"eslint-plugin-react-hooks": "^4.4.0",
		"just-install": "^1.0.8",
		"parcel": "^2.4.1",
		"postcss": "^8.4.12",
		"prettier": "^2.6.2",
		"prettier-plugin-tailwindcss": "^0.1.10",
		"rimraf": "^3.0.2",
		"sass": "^1.50.1",
		"tailwindcss": "^3.0.24",
		"typed-scss-modules": "^6.2.0",
		"typescript": "^4.6.3",
		"vite": "^3.0.9",
		"vite-plugin-solid": "^2.3.0",
		"vitest": "^0.22.1"
	}
}
