{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"importHelpers": true,
		"removeComments": true,
		"importsNotUsedAsValues": "error",
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"incremental": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"**/*.spec.ts",
		"**/*.test.ts"
	],
}
