{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "service_worker.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["ES2021", "DOM", "DOM.Iterable"]
  }
}
